<% content_for :title, "Posts" %>
<% content_for :l_column do %>
<h1>All Posts</h1>
<table  class="table table-striped">
    <thead>
        <th>Title</th>
        <th>Content</th>
        <th>Author</th>
    </thead>
    <tbody>
        <td>Test</td>
        <td>Test</td>
        <td>Test</td>
    </tbody>
</table>
<% end %>
<% content_for :m_column do %>
<h1>New Post</h1>
<form>
    <p>
        <label>Title</label>
        <input type="text" name="" value="">
    </p>
    <p>
        <label>Content</label>
        <br>
        <textarea rows="10" cols="30"></textarea>
    </p>
    <p>
        <label>Author</label>
        <select>
            <option value="John Doe">John Doe</option>
        </select>
    </p>
    <input type="submit" name="" class="btn btn-primary" value="Submit">
</form>
<% end %>
<% content_for :r_column do %>
<h1>Go to Users Page</h1>
