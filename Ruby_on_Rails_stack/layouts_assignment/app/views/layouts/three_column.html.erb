<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <%= yield :l_column %>
        </div>
        <div class="col-md-4">
            <%= yield :m_column %>
        </div>
        <div class="col-md-4">
            <%= yield :r_column %>
        </div>
    </div>
</div>
<%= yield %>
</body>

</html>