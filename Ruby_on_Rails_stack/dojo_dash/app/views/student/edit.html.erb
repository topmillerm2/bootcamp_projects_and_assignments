<h1>Editing <%= @student.first_name %> <%= @student.last_name %></h1>

<% if flash[:messages] %>
    <% flash[:messages].each do |m| %>
        <p style="color:red; font-weight: bold"><%= m %></p>
    <% end %>
<% end %>

<form action="/dojos/<%= @dojo.id %>/student/<%= @student.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <p>
        <label>First Name:</label>
        <input type="text" name="student[first_name]" value="<%= @student.first_name %>">
    </p>
    <p>
        <label>Last Name:</label>
        <input type="text" name="student[last_name]" value="<%= @student.last_name %>">
    </p>
    <p>
        <label>Email:</label>
        <input type="text" name="student[email]" value="<%= @student.email %>">
    </p>
    <p>
        <label>Dojo:</label>
            <select name="student[dojo_id]">
                <% @other_dojos.each do |d| %>
                    <% if d == @dojo %>
                        <option selected value="<%= @dojo.id %>"><%= @dojo.branch %></option>
                    <% else %>
                        <option value="<%= d.id %>"><%= d.branch %></option>
                    <% end %>
                <% end %>
            </select>
    </p>
    <input type="submit" name="" value="Update">

</form>

<p>
    <%= link_to "Home", root_path %> || <a href="/dojos/<%= @dojo.id %>/student/<%= @student.id %>"><%= @student.first_name %></a>
</p>